@model IEnumerable<AtosAula05.Models.Clientes>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<p>
    @Html.ActionLink("Inserir Cliente", "Incluir")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Idade)
           
        </td>
        <td>
            @Html.ActionLink("Alterar", "Alterar", new {  Codigo = item.Cod  }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { Codigo = item.Cod }) |
            @Html.ActionLink("Apagar", "Apagar", new { Codigo = item.Cod })
        </td>
    </tr>
}

</table>
